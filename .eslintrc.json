{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "google",
            "eslint:recommended",
            "plugin:@typescript-eslint/eslint-recommended",
            "plugin:@typescript-eslint/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "parserOptions": {
        "ecmaVersion": 2015,
        "sourceType": "module"
    },
    "rules": {
        "@typescript-eslint/no-explicit-any": "off",
        "linebreak-style": 0,
        "object-curly-spacing": 0,
        "require-jsdoc": 0,
        "camelcase": 0,
        "indent": [
            "error",
            2
        ],
        "new-cap": 0,
        "max-len": [
            2,
            {
                "code": 180,
                "tabWidth": 2,
                "ignoreUrls": true
            }
        ]
    }
}